{
    "name": "@purinton/knit",
    "type": "module",
    "version": "1.0.3",
    "description": "GitHub webhook handler and deployment automation tool. Listens for GitHub webhook events, validates signatures, updates repositories, runs deployment commands, and sends notifications.",
    "main": "knit.mjs",
    "scripts": {
        "start": "node knit.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/knit.git"
    },
    "keywords": [
        "knit",
        "nodejs",
        "webhook",
        "github",
        "deployment",
        "automation",
        "discord",
        "ci",
        "cd"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/knit/issues"
    },
    "homepage": "https://github.com/purinton/knit#readme",
    "devDependencies": {
        "jest": "^30.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.16",
        "@purinton/discord-webhook": "^1.0.3",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "inquirer": "^12.6.3"
    }
}